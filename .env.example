# Example environment for EduDash Pro (do not commit secrets)
# Copy to .env.local and fill in with your project values.

# --- Supabase (client) ---
EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY
EXPO_PUBLIC_SUPABASE_STORAGE_BUCKET=avatars

# --- App metadata ---
EXPO_PUBLIC_APP_NAME=EduDash Pro
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_DEFAULT_CURRENCY=ZAR
EXPO_PUBLIC_DEFAULT_LOCALE=en-ZA
EXPO_PUBLIC_DEFAULT_TIMEZONE=Africa/Johannesburg
EXPO_PUBLIC_APP_SCHEME=edudashpro

# --- Email (client-visible only) ---
FROM_EMAIL=noreply@edudashpro.org.za
EXPO_PUBLIC_FROM_EMAIL=noreply@edudashpro.org.za

# --- Feature flags (no secrets) ---
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_EMAIL_ENABLED=true
EXPO_PUBLIC_EMAIL_MOCK_MODE=false
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_STEM_ACTIVITIES=true
EXPO_PUBLIC_ENABLE_HOMEWORK_GRADING=true
EXPO_PUBLIC_ENABLE_LESSON_GENERATOR=true
EXPO_PUBLIC_ENABLE_PROGRESS_ANALYSIS=true
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_ADS=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# --- AI (no secrets here; server keys belong in Supabase secrets) ---
EXPO_PUBLIC_ANTHROPIC_MODEL=claude-3-haiku-20240307
EXPO_PUBLIC_ANTHROPIC_MAX_TOKENS=4000

# --- Ads (public identifiers) ---
EXPO_PUBLIC_ADMOB_ANDROID_APP_ID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
EXPO_PUBLIC_ADMOB_IOS_APP_ID=ca-app-pub-xxxxxxxxxxxxxxxx~zzzzzzzzzz

# =====================================================
# PAYMENT PROVIDERS (SaaS Subscription System)
# =====================================================

# --- PayFast Configuration (South Africa) ---
EXPO_PUBLIC_PAYFAST_MERCHANT_ID=your_payfast_merchant_id
EXPO_PUBLIC_PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
EXPO_PUBLIC_PAYFAST_PASSPHRASE=your_payfast_passphrase
EXPO_PUBLIC_PAYFAST_ENV=sandbox  # or 'production'

# PayFast Webhook URLs (update with your domain)
PAYFAST_RETURN_URL=https://yourdomain.com/payment/success
PAYFAST_CANCEL_URL=https://yourdomain.com/payment/cancel
PAYFAST_NOTIFY_URL=https://yourdomain.com/api/webhooks/payfast

# --- PayPal Configuration (Optional - International) ---
EXPO_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
EXPO_PUBLIC_PAYPAL_CLIENT_SECRET=your_paypal_client_secret
EXPO_PUBLIC_PAYPAL_ENV=sandbox  # or 'production'

# PayPal Webhook URLs
PAYPAL_RETURN_URL=https://yourdomain.com/payment/success
PAYPAL_CANCEL_URL=https://yourdomain.com/payment/cancel

# --- Application URLs ---
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# --- AI Features ---
EXPO_PUBLIC_AI_ENABLED=true

