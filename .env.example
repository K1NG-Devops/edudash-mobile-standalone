# Server-only placeholders (do NOT include in .env.local) ---
# SERVER_SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
# SERVER_RESEND_API_KEY=YOUR_RESEND_API_KEY
# SERVER_ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY

